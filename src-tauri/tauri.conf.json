{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ExaWord",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "publisher": "JiroBlade",
      "copyright": "JiroBlade",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "ExaWord",
      "longDescription": "Minimalist rich text editor",
      "shortDescription": "Minimalist rich text editor",
      "externalBin": [],
      "resources": [],
      "targets": "all",
      "deb": {
        "depends": []
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "en-US"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false,
      "dialog": true,
      "endpoints": [],
      "windows": {
        "installMode": "basicUi"
      },
      "pubkey": ""
    },
    "windows": [
      {
        "title": "ExaWord",
        "url": "index.html",
        "fullscreen": false,
        "focus": true,
        "resizable": true,
        "decorations": false,
        "center": true
      }
    ]
  }
}
